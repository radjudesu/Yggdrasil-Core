<UserControl x:Class="Yggdrasil_Core.Forms.MacroPadForm"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:hc="https://handyorg.github.io/handycontrol"
             xmlns:local="clr-namespace:Yggdrasil_Core.Forms"
             xmlns:models="clr-namespace:Yggdrasil_Core.Models"
             xmlns:utils="clr-namespace:Yggdrasil_Core.Utils"
             mc:Ignorable="d"
             d:DesignHeight="430" d:DesignWidth="545" Foreground="{x:Null}" Background="#FF0A0A0A">
    <UserControl.Resources>
        <SolidColorBrush x:Key="SecondaryBrush" Color="#202020" />
        <SolidColorBrush x:Key="BorderBrush" Color="#333333" />
    </UserControl.Resources>
    <Grid Margin="0,0,0,20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Border Grid.Column="0" Background="{StaticResource SecondaryBrush}" BorderBrush="{StaticResource BorderBrush}" BorderThickness="1" Margin="0,0,4,10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0" Text="Macros" FontWeight="Bold" Margin="5" Foreground="White" />
                <TreeView Grid.Row="1" ItemsSource="{Binding Folders}"
                          utils:TreeViewExtensions.SelectedItem="{Binding SelectedTreeItem, Mode=TwoWay}"
                          Margin="5" FontSize="10">
                    <TreeView.Resources>
                        <HierarchicalDataTemplate DataType="{x:Type models:MacroFolder}" ItemsSource="{Binding Macros}">
                            <TextBlock Text="{Binding Name}" Foreground="Black"/>
                        </HierarchicalDataTemplate>
                        <DataTemplate DataType="{x:Type models:Macro}">
                            <TextBlock Text="{Binding Name}" Foreground="Black"/>
                        </DataTemplate>
                    </TreeView.Resources>
                </TreeView>
                <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="5" Height="23">
                    <Button Command="{Binding CreateFolderCommand}" Margin="0,0,5,0" ToolTip="New Folder" Padding="0" Width="20" Height="20" Background="{x:Null}" BorderBrush="{x:Null}">
                        <Image Source="/Resources/Icons/new-folder.png" Stretch="Uniform" Cursor="Hand" />
                    </Button>
                    <Button Command="{Binding CreateMacroCommand}" Margin="0,0,5,0" ToolTip="Create" Padding="0" Width="20" Height="20" Background="{x:Null}" BorderBrush="{x:Null}">
                        <Image Source="/Resources/Icons/add-button.png" Stretch="Uniform" Cursor="Hand" />
                    </Button>
                    <Button Command="{Binding EditMacroCommand}" Margin="0,0,5,0" ToolTip="Edit" Padding="0" Width="20" Height="20" Background="{x:Null}" BorderBrush="{x:Null}">
                        <Image Source="/Resources/Icons/note.png" Stretch="Uniform" Cursor="Hand" />
                    </Button>
                    <Button Command="{Binding DeleteCommand}" Margin="0,0,5,0" ToolTip="Delete" Padding="0" Width="20" Height="20" Background="{x:Null}" BorderBrush="{x:Null}">
                        <Image Source="/Resources/Icons/delete.png" Stretch="Uniform" Cursor="Hand" />
                    </Button>
                    <Button Command="{Binding ImportMacroCommand}" ToolTip="Import" Padding="0" Width="20" Height="20" Background="{x:Null}" BorderBrush="{x:Null}">
                        <Image Source="/Resources/Icons/download.png" Stretch="Uniform" Cursor="Hand" />
                    </Button>
                    <Button Command="{Binding ExportMacroCommand}" ToolTip="Import" Padding="0" Width="20" Height="20" Background="{x:Null}" BorderBrush="{x:Null}">
                        <Image Source="/Resources/Icons/upload.png" Stretch="Uniform" Cursor="Hand" />
                    </Button>
                </StackPanel>
            </Grid>
        </Border>
        <Border Grid.Column="1" Background="{StaticResource SecondaryBrush}" BorderBrush="{StaticResource BorderBrush}" BorderThickness="1" Margin="6,0,0,310">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0" Text="Profiles" FontWeight="Bold" Margin="5" Foreground="White" />
                <hc:ComboBox Grid.Row="1" ItemsSource="{Binding ProfileNames}"
                             SelectedItem="{Binding SelectedProfile}"
                             IsEditable="True"
                             Margin="5" />
                <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="5">
                    <Button Content="Load" Command="{Binding LoadProfileCommand}" Margin="0,0,5,0" />
                    <Button Content="Save" Command="{Binding SaveProfileCommand}" Margin="0,0,5,0" />
                    <Button Content="Delete" Command="{Binding DeleteProfileCommand}" Margin="0,0,5,0" />
                    <Button Content="Import" Command="{Binding ImportProfileCommand}" />
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>
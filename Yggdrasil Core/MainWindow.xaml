<Window x:Class="Yggdrasil_Core.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Yggdrasil_Core"
        xmlns:hc="https://handyorg.github.io/handycontrol"
        mc:Ignorable="d"
        Title="Yggdrasil Core" Height="700" Width="990"
        WindowStyle="ToolWindow" ResizeMode="NoResize"
        Background="{DynamicResource BackgroundBrush}" Foreground="{DynamicResource ForegroundBrush}">
    <Window.Resources>
        <SolidColorBrush x:Key="BackgroundBrush" Color="#0A0A0A" />
        <SolidColorBrush x:Key="ForegroundBrush" Color="#DCDCDC" />
        <SolidColorBrush x:Key="AccentBrush" Color="#1E90FF" />
        <SolidColorBrush x:Key="SecondaryBrush" Color="#202020" />
        <SolidColorBrush x:Key="BorderBrush" Color="#333333" />
        <SolidColorBrush x:Key="ConsoleBgLight" Color="#F0F0F0" />
        <SolidColorBrush x:Key="ConsoleBgDark" Color="#101010" />
        <SolidColorBrush x:Key="HPBrush" Color="#FF6B1226" />
        <SolidColorBrush x:Key="SPBrush" Color="#FF3EAACE" />
        <Style x:Key="ToggleSwitchStyle" TargetType="ToggleButton">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Grid VerticalAlignment="Center">
                            <Border x:Name="Border" Width="30" Height="6" Background="#FF843333" CornerRadius="3" VerticalAlignment="Center" />
                            <Ellipse x:Name="Thumb" Width="12" Height="12" Fill="#FF1D1D1D" HorizontalAlignment="Left" Margin="0">
                                <Ellipse.RenderTransform>
                                    <TranslateTransform x:Name="ThumbTransform" X="0"/>
                                </Ellipse.RenderTransform>
                            </Ellipse>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Trigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="ThumbTransform" Storyboard.TargetProperty="X" To="18" Duration="0:0:0.2"/>
                                            <ColorAnimation Storyboard.TargetName="Border" Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)" To="LimeGreen" Duration="0:0:0.2"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.EnterActions>
                                <Trigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="ThumbTransform" Storyboard.TargetProperty="X" To="0" Duration="0:0:0.2"/>
                                            <ColorAnimation Storyboard.TargetName="Border" Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)" To="#FF843333" Duration="0:0:0.2"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.ExitActions>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200" />
            <ColumnDefinition />
            <ColumnDefinition Width="245" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="150" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <TextBlock x:Name="licenseNumber" Grid.Row="0" Grid.Column="0" Text="License: 1234-XXXX-XXXX" FontSize="12" Margin="10,5,10,5" />
        <TextBlock x:Name="statusLabel" Grid.Row="0" Grid.Column="2" Text="Status: Running" FontSize="12" HorizontalAlignment="Left" Margin="153,5,0,5" Width="82" />
        <Border Grid.Row="1" Background="{StaticResource SecondaryBrush}" BorderBrush="{StaticResource BorderBrush}" BorderThickness="1" HorizontalAlignment="Center" Margin="0,10,0,10" Width="180">
            <StackPanel Grid.Row="1" Grid.Column="0" Background="{StaticResource SecondaryBrush}">

                <TextBlock Text="SELECT PROCESS" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,10,0,5" />
                <ComboBox x:Name="processList" ToolTip="Select RO Client" Margin="3,8,3,4" Padding="9,0,8,0" >
                    <ComboBoxItem Content="RO Client 1" />
                </ComboBox>
                <StackPanel Orientation="Horizontal" Margin="0,3,0,10" HorizontalAlignment="Center">
                    <Button x:Name="attachBtn" Content="Attach" Width="70" Margin="0,0,5,0" Cursor="Hand" Click="OnAttachClick" />
                    <Button x:Name="detachBtn" Content="Detach" Width="70" Cursor="Hand" Click="OnDetachClick" />
                </StackPanel>
                <TextBlock Text="TOOLS" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,10" />
                <ListBox x:Name="ToolsList" Margin="0,0,0,0" Background="Transparent" Height="286" BorderBrush="{x:Null}">
                    <ListBoxItem x:Name="odinsEyeListBtn" Margin="3,2,3,4">
                        <DockPanel LastChildFill="False" Width="150">
                            <ToggleButton x:Name="odinsEyeToggleBtn" Style="{StaticResource ToggleSwitchStyle}" IsChecked="False" DockPanel.Dock="Right" Width="30" Margin="0,0,4,0" Cursor="Hand" />
                            <TextBlock Text="Odin's Eye" Width="56" />
                        </DockPanel>
                    </ListBoxItem>
                    <ListBoxItem x:Name="macroPadListBtn" Margin="3,0,3,4">
                        <DockPanel LastChildFill="False" Width="150">
                            <ToggleButton x:Name="macroPadToggleBtn" Style="{StaticResource ToggleSwitchStyle}" IsChecked="False" DockPanel.Dock="Right" Width="30" Margin="0,0,4,0" Cursor="Hand" />
                            <TextBlock Text="Macro Pad" Width="56" />
                        </DockPanel>
                    </ListBoxItem>
                    <ListBoxItem x:Name="autoPotionListBtn" Margin="3,0,3,4">
                        <DockPanel LastChildFill="False" Width="150">
                            <ToggleButton x:Name="autoPotionToggleBtn" Style="{StaticResource ToggleSwitchStyle}" IsChecked="False" DockPanel.Dock="Right" Width="30" Margin="0,0,4,0" Cursor="Hand" />
                            <TextBlock Text="Auto Potion" Width="66" />
                        </DockPanel>
                    </ListBoxItem>
                    <ListBoxItem x:Name="automationListBtn" Margin="3,0,3,4">
                        <DockPanel LastChildFill="False" Width="150">
                            <ToggleButton x:Name="automationToggleBtn" Style="{StaticResource ToggleSwitchStyle}" IsChecked="False" DockPanel.Dock="Right" Width="30" Margin="0,0,4,0" Cursor="Hand" />
                            <TextBlock Text="Automation" Width="66" />
                        </DockPanel>
                    </ListBoxItem>
                    <ListBoxItem x:Name="ndlListBtn" Margin="3,0,3,4">
                        <DockPanel LastChildFill="False" Width="150">
                            <ToggleButton x:Name="ndlToggleBtn" Style="{StaticResource ToggleSwitchStyle}" IsChecked="False" DockPanel.Dock="Right" Width="30" Margin="0,0,4,0" Cursor="Hand" />
                            <TextBlock Text="No Delay" Width="49" />
                        </DockPanel>
                    </ListBoxItem>
                    <ListBoxItem Content="AutoBuff" Margin="3,0,3,4" />
                    <ListBoxItem Content="AutoSwitch" Margin="3,0,3,4" />
                </ListBox>
            </StackPanel>
        </Border>
        <Border x:Name="winForm" Grid.Row="1" Grid.Column="1" Margin="0,10,0,10">
            <Grid x:Name="ToolFormPanel" Background="Black"/>
        </Border>
        <Border Grid.Row="1" Grid.Column="2" Margin="10,10,10,10" Background="{StaticResource SecondaryBrush}" BorderBrush="{StaticResource BorderBrush}" BorderThickness="1">
            <StackPanel Margin="10">
                <TextBlock Text="CHARACTER INFO" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,10" />
                <TextBlock x:Name="nameLabel" Text="Name: PlaceHolder" Margin="0,0,0,5" />
                <ProgressBar x:Name="HPBar" Height="15" Value="80" Maximum="100" Foreground="{StaticResource HPBrush}" Background="{StaticResource BorderBrush}" ToolTip="HP" />
                <ProgressBar x:Name="SPBar" Height="15" Value="60" Maximum="100" Foreground="{StaticResource SPBrush}" Background="{StaticResource BorderBrush}" ToolTip="SP" Margin="0,5,0,0" />
                <Separator Margin="0,10,0,10" />
                <TextBlock Text="placeholder" HorizontalAlignment="Center" />
            </StackPanel>
        </Border>
        <Border Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3" Margin="10,0,10,10" Background="{DynamicResource ConsoleBgDark}" BorderBrush="{StaticResource BorderBrush}" BorderThickness="1">
            <hc:TextBox x:Name="consoleLog" IsReadOnly="True" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" ToolTip="Console Log" Background="{StaticResource SecondaryBrush}" Foreground="White" FontStyle="Italic" />
        </Border>
        <StatusBar Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="3" Background="{DynamicResource ForegroundBrush}" Height="35" VerticalAlignment="Bottom">
            <StatusBarItem Content="Author: raginox" VerticalAlignment="Center" />
            <Separator Height="30" />
            <StatusBarItem Content="Support: support@yggdrasilcore.com" VerticalAlignment="Center" />
            <Separator Height="30" />
            <StatusBarItem Content=" Version: 1.0" VerticalAlignment="Center" />
            <Separator Height="30" />
            <StatusBarItem HorizontalAlignment="Right">
                <Button x:Name="themeBtn" Width="30" Height="20" ToolTip="Light/Dark Mode Toggle" HorizontalAlignment="Right" Cursor="Hand" >
                </Button>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>